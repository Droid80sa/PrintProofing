# Mail configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_SSL=true
MAIL_USERNAME=you@example.com
MAIL_PASSWORD=yourpassword
MAIL_DEFAULT_SENDER=proofs@example.com
MAIL_DEFAULT_REPLY_TO=proofs@example.com

# Optional public URL used when generating client links
PUBLIC_BASE_URL=https://proofs.example.com

# Optional public URL for file storage (leave blank for local routing)
FILE_BASE_URL=

# Optional absolute path for proof storage (e.g. NFS mount); defaults to app/proofs
FILE_STORAGE_ROOT=/mnt/proofs
FILE_STORAGE_BACKEND=local  # or s3
AWS_S3_BUCKET=
AWS_S3_PREFIX=proofs
AWS_S3_REGION=
AWS_S3_ENDPOINT_URL=

# Flask secret key (change in production)
SECRET_KEY=change-me

# Accounts are managed in the database (use `flask --app app.app create-user`)

# Login protection (optional overrides)
LOGIN_MAX_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=300

# Customer notification templates (optional overrides)
# CUSTOMER_NOTIFY_DEFAULT_SUBJECT=New proof ready: {{job_name}}
# CUSTOMER_NOTIFY_DEFAULT_BODY=Hi {{customer_name}},\n\nA new proof "{{job_name}}" is ready for review. View it here: {{proof_link}}\n\nRegards,\n{{designer_name}}

# Customer portal rollout controls
CUSTOMER_LOGIN_ENABLED=false
LEGACY_PUBLIC_LINKS_ENABLED=true

# Database connection string (Docker Compose default points at the bundled Postgres service)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/proofs_app
